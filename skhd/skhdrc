# change window focus within space --layout float
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east || yabai -m window --focus stack.next
alt - h : yabai -m window --focus west || yabai -m window --focus stack.prev


# forward

cmd + alt - space : yabai -m space --layout "$(yabai -m query --spaces --space | jq -r 'if .type == "bsp" then "stack" else "bsp" end')"

# maximize a window
shift + alt - m : yabai -m window --toggle zoom-fullscreen
shift + alt - f : yabai -m window --grid 1:1:0:0:1:1 || yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
shift + alt - b : yabai -m space --balance

# rotate windows in space
shift + alt - r : yabai -m space --rotate 90


alt + cmd - l : mpv --no-video --volume=50 "https://www.youtube.com/watch?v=jfKfPfyJRdk2"
alt + cmd - s : killall mpv


# change to tiled
alt + cmd - b : yabai -m space --layout bsp

# change to stack
alt + cmd - f : yabai -m space --layout float

# quick restart
alt + cmd - r : yabai --restart-service


# switch to spaces by index
cmd + alt - 1 : yabai -m space --focus space_1
cmd + alt - 2 : yabai -m space --focus space_2
cmd + alt - 3 : yabai -m space --focus space_3
cmd + alt - 4 : yabai -m space --focus space_4
cmd + alt - 5 : yabai -m space --focus space_5
cmd + alt - 6 : yabai -m space --focus space_6
cmd + alt - 7 : yabai -m space --focus space_7
cmd + alt - 8 : yabai -m space --focus space_8
cmd + alt - 9 : yabai -m space --focus space_9

# move window to spaces by index
cmd + alt + shift - 1 : yabai -m window --space space_1
cmd + alt + shift - 2 : yabai -m window --space space_2
cmd + alt + shift - 3 : yabai -m window --space space_3
cmd + alt + shift - 4 : yabai -m window --space space_4
cmd + alt + shift - 5 : yabai -m window --space space_5
cmd + alt + shift - 6 : yabai -m window --space space_6
cmd + alt + shift - 7 : yabai -m window --space space_7
cmd + alt + shift - 8 : yabai -m window --space space_8
cmd + alt + shift - 9 : yabai -m window --space space_9
cmd + alt + shift - 0 : yabai -m window --space space_10

shift + alt + tab - 1 : yabai -m space --display 1
shift + alt + tab - 2 : yabai -m space --display 2
